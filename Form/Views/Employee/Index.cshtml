</head>

<body>


    <div class="container" style="margin-top:50px">
        <div class="col-md-7 mx-auto my-auto bg-transparent">
            <div class=" col-md-11 ">
                <h1 class=" text-center">PERSONEL KAYIT</h1>
            </div>
            <form method="post">

                <div class="form-group row">
                    <label for="inputName" class="col-md-12 ">Adınız</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" id="name" name="EmployeeName" placeholder="" required="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputSurname" class="col-md-12 col-form-label">Soyadınız</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" name="EmployeeSurname" id="surname">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputSurname" class="col-md-12 col-form-label">İşe Başlangıç Tarihi</label>
                    <div class="col-md-12">
                        <input type="date" class="form-control" name="DateOfStartingJob" id="date">
                    </div>
                </div>
                <div class="row form-group">
                    <label for="inputGender" class=" col-md-12 col-form-label">Cinsiyet</label>
                    <div class="col-md-12">
                        <select id="Cinsiyet" onchange="" class="form-select" aria-label="Default select example">
                        </select>
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">

                    <div class="form-group">

                        <label for="inputCountry" class="col-form-label">Ülke</label>
                        <select id="Ulke" onchange="Sehirler()" class="form-select" aria-label="Default select example">

                            <option value="" selected display>Seçiniz</option>

                        </select>
                        <span class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label class="control-label">Şehir:</label>

                        <select id="Sehir" class="form-select" aria-label="Default select example">

                            <option value="" selected display>Seçiniz</option>

                        </select>
                    </div>


                </div>

                <div class="form-group">

                    <div class="Media">
                        <label class="control-label">Medya:</label>
                        <div class="row" id="aa_imgFile">
                            <img src="" id="a_imgFile" width="30" height="100" />
                        </div>
                        <div class="form-group">
                            <label class="control-label"></label>
                            <input type="file" name="iFormFile" id="imgFile" mediaId="" onchange="MedyaOlustur(this.id)" accept="image/*" />

                        </div>
                    </div>
                </div>


                <div class="form-group row">
                    <label for="inputAdress" class="col-md-12 col-form-label">Adres</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" name="EmployeeAdress" id="adress" style="height:100px">
                    </div>
                </div>


                <div id="okulTekrarliRow" class="deneme">
                    <div class="row ">
                        <div class="col-md-3">
                            <label class="control-label">Okul Tipi</label>
                            <select id="Okul" class="form-select okul">
                                <option value="">Seçiniz</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="control-label">Okul Adı</label>
                            <input class="form-control" name="OkulAdi" id="OkulAdi" placeholder="Seçiniz.">
                        </div>
                        <div class="col-md-4">
                            <label class="control-label">Mezuniyet Tarihi</label>
                            <input type="date" class="form-control" name="MezuniyetTarihi" id="MezuniyetTarihi">
                        </div>
                        <div class="col-md-1">
                            <label class="control-label"></label>
                            <button type="button" onclick="OkulEkle()" style="height:35px;width:35px">+</button>
                        </div>
                        <input name="medyaid" id="medyaid " type="hidden" />
                    </div>
                </div>
                <br />

                <div class="form-group row  col-md-12">
                    <button type="submit" onclick="Kaydet()" class="btn btn-dark ">Kaydet</button>
                    <a asp-action="List">Listele</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>

